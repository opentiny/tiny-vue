{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowJs": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "demos/**/*.ts",
    "demos/**/*.d.ts",
    "demos/**/*.tsx",
    "demos/**/*.vue",
    "demos/pc/app/grid/event/toolbar-button-click-event.spec.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
